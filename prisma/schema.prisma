generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Productos {
  id           String @id @default(uuid())
  nombre       String
  description  String
  nroSerie     String @unique
  imagen       String
  precioCompra Float
  precioVenta  Float

  slug String @unique

  marca   Marcas? @relation(fields: [marcaId], references: [id])
  marcaId String?

  proveedor   Proveedores? @relation(fields: [proveedorId], references: [id])
  proveedorId Int?

  categoria   Categorias? @relation(fields: [categoriaId], references: [id])
  categoriaId Int?

  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Marcas {
  id          String @id @default(uuid())
  nombre      String
  description String

  productos Productos[]

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Categorias {
  id     Int    @id @default(autoincrement())
  nombre String
  slug   String @unique

  productos Productos[]

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Proveedores {
  id Int @id @default(autoincrement())

  nombre    String
  telefono  String?
  direccion String?

  productos Productos[]

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}
